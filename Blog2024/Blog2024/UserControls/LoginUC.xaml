<UserControl x:Class="Blog2024.UserControls.LoginUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Blog2024.UserControls">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="120"/>
            <ColumnDefinition Width="10"/>
            <ColumnDefinition Width="170"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="40"/>
            <RowDefinition Height="10"/>
            <RowDefinition Height="40"/>
            <RowDefinition Height="10"/>
            <RowDefinition Height="40"/>
            <RowDefinition Height="10"/>
            <RowDefinition Height="40"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>

        <Label Grid.Column="1" Content="Imie" Grid.Row="1" FontSize="20" HorizontalAlignment="Center"/>
        <Label Grid.Column="1" Content="Nazwisko" Grid.Row="3" FontSize="20" HorizontalAlignment="Center"/>
        <Label Grid.Column="1" Content="Wiek" Grid.Row="5" FontSize="20" HorizontalAlignment="Center"/>
        <Label Grid.Column="1" Content="Pseudonim" Grid.Row="7" FontSize="20" HorizontalAlignment="Center"/>

        <TextBox Name="FirstName" Grid.Column="3" Grid.Row="1" FontSize="20"/>
        <TextBox Name="LastName" Grid.Column="3" Grid.Row="3" FontSize="20"/>
        <TextBox Name="Age" Grid.Column="3" Grid.Row="5" FontSize="20"/>
        <TextBox Name="Pseudonym" Grid.Column="3" Grid.Row="7" FontSize="20"/>
        <Button Content="Wejdz" Grid.Column="1" Grid.Row="8" Grid.ColumnSpan="3" FontSize="18" Height="40" Width="290" HorizontalAlignment="Center" Click="Button_Click"/>
    </Grid>
</UserControl>
